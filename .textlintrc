{
  "filters": {
    "comments": true
  },
  "rules": {
    "preset-japanese": {
      "sentence-length": {
        "max": 150
      },
      "no-doubled-joshi": {
        "allow": ["も", "や", "に", "とか", "か", "が"]
      },
      "max-ten": {
        "max": 4
      }
    },
    "preset-jtf-style": {
      "1.1.1.本文": false,
      "1.2.1.句点(。)と読点(、)": false,
      "4.1.3.ピリオド(.)、カンマ(,)": false,
      "4.3.7.山かっこ<>": false,
      "2.2.3.一部の助数詞の表記": false,
      "4.2.7.コロン(：)": false
    }
  }
}
