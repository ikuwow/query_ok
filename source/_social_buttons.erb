<% if false %>
    This partial is for each blog articles.
    current_article object is assumed.
<% end %>

<ul class="social-buttons">
    <li class="social-button-twitter">
        <a href="https://twitter.com/share" class="twitter-share-button" data-via="ikuwow" data-related="ikuwow">Tweet</a></li>
    <li class="social-button-hatebu">
        <a href="http://b.hatena.ne.jp/entry/ikuwow.website<%= current_article.url %>" class="hatena-bookmark-button" data-hatena-bookmark-title="<%= current_article.title %> : Query OK." data-hatena-bookmark-layout="standard-balloon" data-hatena-bookmark-lang="ja" title="このエントリーをはてなブックマークに追加"><img src="https://b.st-hatena.com/images/entry-button/button-only@2x.png" alt="このエントリーをはてなブックマークに追加" width="20" height="20" style="border: none;"/></a>
    </li>
    <li class="social-button-facebook">
        <div class="fb-share-button" data-href="http://ikuwow.website<%= current_article.url %>" data-layout="button_count"></div>
    </li>
    <li class="social-button-pocket">
        <a data-pocket-label="pocket" data-pocket-count="horizontal" class="pocket-btn" data-lang="en"
                data-save-url="http://ikuwow.website<%= current_article.url %>"></a>
    </li>
</ul>


<style>
ul.social-buttons {
    list-style-type: none;
    margin: 0;
    padding: 0;
}
ul.social-buttons li {
    float: left;
    display: table-cell;
    vertical-align: middle;
    margin-right: 10px;
    margin-bottom: 10px;
}

.social-button-pocket {
    max-width: 95px;
}

.social-button-twitter {
    max-width: 80px;
}
</style>
