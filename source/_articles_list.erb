<% articles.each do |article| %>
    <section class="post">
        <header class="post-header">
            <h2 class="post-title">
                <%= link_to article.title, article %>
            </h2>
        </header>

        <p class="post-meta">
        <time>Posted at <%= article.date.strftime('%b %e %Y') %></time>
        <% article.tags.each do |tag| %>
            <%= link_to '<i class="fa fa-tag post-category-icon"></i>'+tag, tag_path(tag), :class => "post-category"%>
        <% end %>

        </p>

        <div class="post-description">
            <p>
                <%= strip_tags(article.summary) %>
            </p>
            <%= link_to '続きを読む', article, :class => "pure-button btn-read-more" %>
        </div>
    </section>
<% end %>
