---
pageable: true
per_page: 10
---

<% if false %>
<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<% page_articles.each_with_index do |article, i| %>
  <h2><%= link_to article.title, article %> <span><%= article.date.strftime('%b %e') %></span></h2>
  <!-- use article.summary(250) if you have Nokogiri available to show just
       the first 250 characters -->
  <%= article.body %>
<% end %>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>
<% end %>

<div class="posts">
    <h1 class="content-subhead">Recent Posts</h2>

    <% blog.articles[0...5].each do |article| %>
        <section class="post">
            <header class="post-header">
                <h2 class="post-title"><%= link_to article.title, article %></h2>
            </header>

            <p class="post-meta">
            <% # By <a href="#" class="post-author">Tilo Mitra</a> under  %>
            <time>Posted at <%= article.date.strftime('%b %e %Y') %></time>
            <% # <a class="post-category post-category-design" href="#">CSS</a> %>
            <% # <a class="post-category post-category-pure" href="#">Pure</a> %>
            </p>
            
            <div class="post-description">
                <p>
                    <%= article.summary %>
                </p>
            </div>
        </section>
    <% end %>

</div>
