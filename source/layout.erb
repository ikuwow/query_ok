<div id="layout" class="pure-g">

    <!-- Sidebar -->
    <div class="sidebar pure-u-1 pure-u-md-1-4">
        <div class="header">
            <% # this is how to add class to link generated by heplers %>
            <h1 class="brand-title"><%= link_to "Query OK.", "/" %></h1>
            <h2 class="brand-tagline">ゐくを（ikuwow）の技術ブログ</h2>

            <nav class="nav">
                <ul class="nav-list">
                    <li class="nav-item">
                        <a class="pure-button" href="https://github.com/ikuwow">GitHub</a>
                    </li>
                    <li class="nav-item">
                        <a class="pure-button" href="http://qiita.com/ikuwow">Qiita</a>
                    </li>
                </ul>
            </nav>
            <div class="tag-cloud">
                <ul>
                <% # blog_tags = blog.tags.sort{ |a, b| a["tag"].size <=> b["tag"].size} %>
                <% # TODO: 記事数の多い順にソートして表示する %>
                <% blog.tags.each do |tag,articles| %>
                    <li><%= link_to "#{tag}(#{articles.size})", tag_path(tag) %></li>
                <% end %>
                </ul>
            </div>
        </div>
    </div>

    <!-- Article body -->
    <div class="content pure-u-1 pure-u-md-3-4">
        <div>

            <%= yield %>

            <div class="footer">
                <div class="pure-menu pure-menu-horizontal">
                    <ul>
                        <% #<li class="pure-menu-item"><a href="http://purecss.io/" class="pure-menu-link">About</a></li> %>
                        <li class="pure-menu-item"><a href="http://twitter.com/ikuwow" class="pure-menu-link">Twitter</a></li>
                        <li class="pure-menu-item"><a href="https://github.com/ikuwow" class="pure-menu-link">GitHub</a></li>
                    </ul>
                </div>
            </div><!-- .footer -->

        </div>
    </div><!-- Article Body -->

</div><!-- #layout -->

