{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-standard-scss"
  ],
  "ignoreFiles": [
    "build/**/*.css",
    "vendor/**/*.css",
    "vendor/**/*.scss"
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "mixin",
          "include"
        ]
      }
    ]
  }
}
